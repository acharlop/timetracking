<% if flash[:notice] %>
	<%= flash[:notice] %>
<% end %>

<h2><%= @project.name %></h2>
<%= link_to "New", new_project_time_entry_path  %>
&nbsp;&nbsp;&nbsp;
<%= link_to "Back", "/projects" %>
<ul>
<% @entries.each do |entry| %>
	<li>
		<%= link_to "Edit", edit_project_time_entry_path(@project, entry) %>
		<strong>Length:</strong> <%= entry.hours %> h <%= entry.minutes %> m, 
		<strong>Info:</strong> <%= entry.comment %>,
		<strong>On:</strong> <%= entry.date %>
	</li>
<% end %>
</ul>